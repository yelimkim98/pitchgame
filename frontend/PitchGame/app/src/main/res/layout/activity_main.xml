<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:scaleType="centerCrop"
        android:src="@drawable/night_sky" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/logoTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/playBtn"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="100dp"
            android:textSize="40dp"
            android:textColor="#FFBBCCDD"
            android:typeface="serif"
            android:text="Pitch Game" />

        <Button
            android:id="@+id/playBtn"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:background="@drawable/main_playbtn"
            android:textSize="20dp"
            android:textColor="#CCEEEEEE"
            android:typeface="serif"
            android:text="play" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="22dp"
                    android:layout_marginBottom="15dp"
                    android:typeface="serif"
                    android:textColor="#FF99AABB"
                    android:text="made by " />
                <TextView
                    android:id="@+id/ResetAllBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:textSize="22dp"
                    android:typeface="serif"
                    android:textColor="#FF99AABB"
                    android:text="Yelim &amp; Seungyeon" />
                <TextView
                    android:id="@+id/shareBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="22dp"
                    android:typeface="serif"
                    android:layout_margin="25dp"
                    android:textColor="#FF99AABB"
                    android:text="" />
        </LinearLayout>
    </RelativeLayout>

</FrameLayout>