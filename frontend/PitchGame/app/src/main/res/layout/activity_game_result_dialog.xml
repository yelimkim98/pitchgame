<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.ChooseLevelDialog"
    android:layout_gravity="center_vertical|center_horizontal"
    android:gravity="center_vertical|center_horizontal"
    android:background="@drawable/choose_level_dialog_background"
    tools:context=".LevelChooseDialogActivity">

    <LinearLayout
        android:id="@+id/levelSpecificationLayer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="15dp"
        android:gravity="fill">
        <TextView
            android:id="@+id/levelText_in_GameResultDialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:typeface="serif"
            android:textSize="25dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="20dp"
            android:textColor="#FFAFBFCC"
            android:fontFamily="@font/iropke"
            android:text="난이도 1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginBottom="22dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22dp"
                android:typeface="serif"
                android:textColor="#FF99AABB"
                android:text="결과" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22dp"
                android:typeface="serif"
                android:textColor="#FF99AABB"
                android:text="  |  " />
            <TextView
                android:id="@+id/gameResultTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22dp"
                android:typeface="serif"
                android:textColor="#FF99AABB"
                android:text="" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginBottom="22dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22dp"
                android:typeface="serif"
                android:textColor="#FF99AABB"
                android:text="최고기록" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22dp"
                android:typeface="serif"
                android:textColor="#FF99AABB"
                android:text="  |  " />
            <TextView
                android:id="@+id/bestRecordTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22dp"
                android:typeface="serif"
                android:textColor="#FF99AABB"
                android:text= ""/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal|bottom">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/retryBtn"
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:typeface="serif"
                    android:layout_marginRight="1dp"
                    android:background="@drawable/back_in_dialog_btn"
                    android:textColor="#FFAABBCC"
                    android:text="Retry" />
                <Button
                    android:id="@+id/homeBtn"
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:typeface="serif"
                    android:layout_marginLeft="1dp"
                    android:background="@drawable/start_game_in_dialog_btn"
                    android:text="Home" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</FrameLayout>