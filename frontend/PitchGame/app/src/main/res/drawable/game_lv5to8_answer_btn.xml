<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="oval">
            <gradient android:type="radial" android:gradientRadius="80"
                android:startColor="#88FFFFFF" android:endColor="#00FFFFFF" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <gradient android:type="radial" android:gradientRadius="80"
                android:startColor="#AA446688" android:endColor="#00FFFFFF" />
        </shape>
    </item>
</selector>